<!-- Scripts -->
<script>
  // Smooth scroll for internal links
  document.querySelectorAll('a[href^="#"]').forEach(a=>{
    a.addEventListener('click', e=>{
      const target = document.querySelector(a.getAttribute('href'));
      if(target){
        e.preventDefault();
        target.scrollIntoView({behavior:'smooth',block:'start'});
      }
    });
  });

  // Feedback form: open mail client (best-effort)
  function sendMail(){
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const message = document.getElementById('message').value.trim();
    const to = 'MAIL@example.com'; // replace with your email
    const subject = encodeURIComponent('Feedback from ' + name);
    const body = encodeURIComponent('Name: '+name+'%0AEmail: '+email+'%0A%0AMessage:%0A'+message);
    window.location.href = 'mailto:'+to+'?subject='+subject+'&body='+body;
    return false; // stop normal submit
  }

  // Replace default download link if user left placeholder
  (function(){
    const dl = document.getElementById('downloadLink');
    // If the href is the placeholder, you may replace with hosted link programmatically here
  })();

  // NOTE: Replace 'YOUR_PHONE_NUMBER' in HTML with your actual number (e.g. 255712345678 for Tanzania)
</script>

